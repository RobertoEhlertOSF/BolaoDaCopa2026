@page
@model BolaoDaCopa2026.Pages.Jogos.IndexModel

<header>
    <h1>Jogos da Copa</h1>
</header>

<div class="container">

    <div class="fase">
        <h2>Fase de Grupos</h2>

        @foreach (var jogo in Model.Jogos)
        {
            <div class="jogo @(jogo.EstaAberto ? "aberto" : "fechado")">

                <div class="times">
                    <div class="time">
                        <img src="@jogo.SelecaoA.BandeiraUrl">
                        @jogo.SelecaoA.Nome
                    </div>

                    <div class="vs">vs</div>

                    <div class="time">
                        <img src="@jogo.SelecaoB.BandeiraUrl">
                        @jogo.SelecaoB.Nome
                    </div>
                </div>

                <div class="info">
                    <div>@jogo.DataHora.ToString("dd/MM/yyyy")</div>
                    <div>@jogo.DataHora.ToString("HH:mm")</div>
                </div>

                <div class="acao">
                    @if (jogo.EstaAberto)
                    {
                        <button class="btn btn-apostar">Apostar</button>
                    }
                    else
                    {
                        <span class="encerrado">Encerrado</span>
                    }
                </div>

            </div>
        }

    </div>

</div>
