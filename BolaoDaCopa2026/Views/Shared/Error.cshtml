@* Views/Shared/Error.cshtml *@

<style>
    body {
        margin: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #1a1a1a, #000);
        color: #fff;
    }

    .error-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        padding: 3rem 1rem;
        min-height: 100vh;
        background: radial-gradient(circle at center, rgba(255,255,255,0.05), #111);
    }

        .error-container img {
            max-width: 450px;
            margin-bottom: 2rem;
            border-radius: 16px;
            box-shadow: 0 8px 24px rgba(0,0,0,0.5);
            animation: float 0.5s ease-in-out infinite; /* mais rápido */
        }
    @@keyframes float {
        0%, 100%

    {
        transform: translateY(0);
    }

    50% {
        transform: translateY(-30px);
    }

    }

    .error-container h1 {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        color: #ff4c4c;
        text-shadow: 1px 1px 4px rgba(0,0,0,0.6);
    }

    .error-container h2 {
        font-size: 1.4rem;
        font-weight: 400;
        margin-bottom: 1.5rem;
        color: #ff9999;
        max-width: 480px;
    }

    .error-container a {
        display: inline-block;
        padding: 0.8rem 2rem;
        border-radius: 30px;
        background: #f5c518;
        color: #000;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        box-shadow: 0 6px 18px rgba(0,0,0,0.4);
    }

        .error-container a:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 24px rgba(0,0,0,0.5);
        }

    /* Mobile */
    @@media (max-width: 600px) {
        .error-container img

    {
        max-width: 150px;
    }

    .error-container h1 {
        font-size: 2rem;
    }

    .error-container h2 {
        font-size: 1rem;
    }

    .error-container a {
        width: 100%;
        text-align: center;
    }

    }
</style>

<div class="error-container">
    <img src="~/Img/sadError.png.png" alt="Sad Error" />
    <h1>Ops… algo deu errado 😢</h1>
    <h2>Tente novamente mais tarde ou entre em contato conosco.</h2>
    <a href="/" class="btn">Voltar para a página inicial</a>
</div>
