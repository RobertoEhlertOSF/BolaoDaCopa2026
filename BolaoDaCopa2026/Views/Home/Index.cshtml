@{
    ViewData["Title"] = "Home page";
}

<style>


    html, body {
        height: 100%;
    }

    body {
        background: #000;
        color: #fff;
    }

    /* LANDING */
    .landing {
        position: relative;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient( rgba(0,0,0,0.75), rgba(0,0,0,0.9) ), url("https://rcrusadernews.com/wp-content/uploads/2022/06/World-Cup.png");
        background-size: contain;
        background-repeat: no-repeat;
        background-position: center;
        background-color: #000;
    }

    .overlay {
        position: absolute;
        inset: 0;
        background: radial-gradient( circle at center, rgba(0,0,0,0), rgba(0,0,0,0.85) );
    }

    /* CONTEÚDO */
    .content {
        position: relative;
        z-index: 2;
        text-align: center;
        max-width: 800px;
        padding: 2rem;
    }

    h1 {
        font-size: 3rem;
        font-weight: 800;
        letter-spacing: -1px;
        margin-bottom: 0.5rem;
    }

    .subtitle {
        opacity: 0.75;
        margin-bottom: 2rem;
    }

    /* CONTADOR */
    .countdown {
        display: flex;
        justify-content: center;
        gap: 1.5rem;
        margin-bottom: 2.5rem;
    }

    .time-box {
        background: rgba(255,255,255,0.08);
        border: 1px solid rgba(255,255,255,0.15);
        border-radius: 14px;
        padding: 1rem 1.5rem;
        min-width: 90px;
    }

    .time-value {
        font-size: 2.2rem;
        font-weight: 700;
    }

    .time-label {
        font-size: 0.75rem;
        opacity: 0.7;
        letter-spacing: 1px;
        text-transform: uppercase;
    }

    /* BOTÕES */
    .actions {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .btn {
        padding: 1rem 2.2rem;
        border-radius: 14px;
        font-size: 1.05rem;
        text-decoration: none;
        cursor: pointer;
        transition: all 0.3s ease;
        border: 1px solid transparent;
    }

    .btn-main {
        background: #fff;
        color: #000;
        font-weight: 600;
    }

        .btn-main:hover {
            transform: translateY(-4px);
            box-shadow: 0 15px 40px rgba(255,255,255,0.25);
        }

    .btn-secondary {
        background: rgba(255,255,255,0.1);
        color: #fff;
        border-color: rgba(255,255,255,0.25);
    }

    .btn-outline {
        background: transparent;
        color: #aaa;
        border-color: rgba(255,255,255,0.25);
    }

        .btn-secondary:hover,
        .btn-outline:hover {
            border-color: #fff;
            color: #fff;
            transform: translateY(-3px);
        }

    /* MOBILE */
    @@media (max-width: 768px) {
        h1 {
            font-size: 2.2rem;
        }

        .countdown {
            gap: 0.8rem;
        }

        .time-box {
            min-width: 70px;
            padding: 0.8rem;
        }

        .actions {
            flex-direction: column;
        }

        .btn {
            width: 100%;
        }
    }
</style>

<section class="landing">
    <div class="overlay"></div>

    <div class="content">
        <h1>Bolão da Copa 2026</h1>
        <p class="subtitle">
            O tempo está correndo.
            Seus palpites… questionáveis.
        </p>

        <div class="countdown">
            <div class="time-box">
                <div class="time-value" id="days">00</div>
                <div class="time-label">Dias</div>
            </div>
            <div class="time-box">
                <div class="time-value" id="hours">00</div>
                <div class="time-label">Horas</div>
            </div>
            <div class="time-box">
                <div class="time-value" id="minutes">00</div>
                <div class="time-label">Min</div>
            </div>
            <div class="time-box">
                <div class="time-value" id="seconds">00</div>
                <div class="time-label">Seg</div>
            </div>
        </div>

        <div class="actions">
            <a asp-controller="Conta"
               asp-action="Login"
               class="btn btn-main">
                Entrar no Bolão
            </a>
            <a href="#" class="btn btn-secondary">Minhas Apostas</a>
            <a href="/Selecoes" class="btn btn-secondary">Tabela da Copa</a>
            <!-- TODO: Implementar a href="/Jogos" class="btn btn-main">Ver Jogos</a> -->
        </div>
    </div>
</section>

<script>
    const targetDate = new Date("2026-06-11T00:00:00").getTime();

    function updateCountdown() {
        const now = new Date().getTime();
        const diff = targetDate - now;
        if (diff <= 0) return;

        const days = Math.floor(diff / (1000 * 60 * 60 * 24));
        const hours = Math.floor((diff / (1000 * 60 * 60)) % 24);
        const minutes = Math.floor((diff / (1000 * 60)) % 60);
        const seconds = Math.floor((diff / 1000) % 60);

        document.getElementById("days").textContent = String(days).padStart(2, "0");
        document.getElementById("hours").textContent = String(hours).padStart(2, "0");
        document.getElementById("minutes").textContent = String(minutes).padStart(2, "0");
        document.getElementById("seconds").textContent = String(seconds).padStart(2, "0");
    }

    updateCountdown();
    setInterval(updateCountdown, 1000);
</script>
