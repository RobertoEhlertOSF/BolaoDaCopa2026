@model BolaoDaCopa2026.Models.MovieSearchResponse

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Busca de Filmes</title>
</head>
<body>
    <h2>Buscar Filme</h2>

    <form method="post">
        <input type="text" name="s" placeholder="Digite o nome do filme..." />
        <button type="submit">Buscar</button>
    </form>

    @if (Model != null && Model.Search != null && Model.Search.Count > 0)
    {
        <h3>Resultado:</h3>

        <ul>

            }

            @foreach (var filme in Model.Search)
            {
                <li>
                    <strong>@filme.Title</strong> (@filme.Year)  
                    <br />
                    <img src="@filme.Poster" alt="@filme.Title" width="100" />
                    <br />
                    Tipo: @filme.Type  
                    <br />
                    IMDb: @filme.imdbID
                    <hr />
                </li>
            }
        </ul>
    }
    else if (Model != null && (Model.Search == null || Model.Search.Count == 0))
    {
        <p>Nenhum resultado encontrado.</p>
    }
</body>
</html>
